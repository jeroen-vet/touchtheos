<odoo>
    <template id="product_donation_custom" inherit_id="website_sale.product">
        <xpath expr="//form[@action='/shop/cart/update']" position="inside">
            <!-- Custom donation options -->
            <div class="donation-options">
                <h3>Select Donation Amount</h3>
                <label>
                    <input type="radio" name="donation_type" value="10" checked="checked" /> 10 EUR
                </label>
                <label>
                    <input type="radio" name="donation_type" value="25" /> 25 EUR
                </label>
                <label>
                    <input type="radio" name="donation_type" value="50" /> 50 EUR
                </label>
                <label>
                    <input type="radio" name="donation_type" value="custom" /> Custom Amount
                </label>
                <input type="number" id="custom_amount" name="custom_amount" placeholder="Enter amount" style="display: none;" min="1" step="0.01" />
            </div>
        </xpath>
    </template>
</odoo>
