<odoo>
    <template id="product_donation_custom" inherit_id="website_sale.product">
        <xpath expr="//form[@action='/shop/cart/update']" position="inside">
            <div class="donation-options">
                <h3>Select Donation Amount</h3>
                <label>
                    <input type="radio" name="donation_amount" value="100" checked="checked" /> 100 EUR
                </label>
                <label>
                    <input type="radio" name="donation_amount" value="200" /> 200 EUR
                </label>
                <label>
                    <input type="radio" name="donation_amount" value="300" /> 300 EUR
                </label>
                <label>
                    <input type="radio" name="donation_amount" value="400" /> 400 EUR
                </label>
                <label>
                    <input type="radio" name="donation_amount" value="500" /> 500 EUR
                </label>                
                <label>
                    <input type="radio" name="donation_amount" value="custom" /> Custom Amount
                </label>
                <input type="number" id="custom_amount" name="custom_amount" placeholder="Enter amount" style="display: none;" min="1" step="0.01" />
            </div>        
        </xpath>
    </template>
</odoo>
